{% extends "SPJGameBundle:Layout:base.html.twig" %}

{% block page_content %}
    <h2>Challenges</h2>

    <div id="inprogress_challenge">

        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Challenge of the week : <strong>{{ inprogressChallenge.subject }}</strong>
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 challenge_pictures" data-pictures_url="{{ path('challenge_picture_list', { challengeId : inprogressChallenge.id }) }}">
                        <p>LOADING</p>
                    </div>
                    <div class="col-md-4">

                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Your picture</h3>
                            </div>
                            <div class="panel-body">
                                {% if inprogressUserPicture %}
                                    <a href="{{ asset(inprogressUserPicture.path) }}" target="_blank"><img src="{{ asset(inprogressUserPicture.miniaturePath) }}" alt="{{ inprogressUserPicture.title }}"/></a>
                                {% else %}
                                    <button type="button" id="picture_upload_button" class="btn btn-primary" data-href="{{ path('picture_create', { challengeId : inprogressChallenge.id }) }}">Upload my picture</button>
                                {% endif %}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    <div id="over_challenges">
        <h3>Previous challenges</h3>
        {% for challenge in overChallenges %}
            {{ challenge.subject }}
        {% endfor %}
    </div>

{% endblock %}
