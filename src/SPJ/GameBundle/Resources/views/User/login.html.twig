{% extends "SPJGameBundle:Layout:base.html.twig" %}

{% block title %}SPJGameBundle:User:login{% endblock %}

{% block page_content %}

    <div class="panel panel-default" id="login_panel">
        <div class="panel-heading">
            <h3 class="panel-title">{{ "user.login"|trans() }}</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <form action="{{ path('login_check') }}" method="post">
                        <div class="input-group">
                            <span class="input-group-addon">{{ "user.input.username"|trans() }}</span>
                            <input type="text" class="form-control" name="_username">
                        </div>

                        <div class="input-group">
                            <span class="input-group-addon">{{ "user.input.password"|trans() }}</span>
                            <input type="password" class="form-control" name="_password">
                        </div>

                        <button type="submit" class="btn btn-primary">{{ "user.login.submit"|trans() }}</button>
                    </form>

                    <p>
                        {{ "user.no_signup"|trans() }} <a href="{{ path('signup') }}">{{ "user.signup_advice"|trans() }}</a>
                    </p>
                </div>

                <div class="col-md-6">
                    <a href="{{ facebookLoginUrl }}" class="btn btn-default btn-lg">
                        <img src="{{ asset('/bundles/spjgame/img/facebook_icon.png') }}" alt="facebook_logo"/>
                        {{ "user.facebook_login"|trans() }}
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
