{% extends 'SPJGameBundle:Layout:base.html.twig' %}

{% form_theme form 'SPJGameBundle:Form:form_div_layout.html.twig' %}

{% block page_content %}
    <div class="panel panel-default" id="signup_panel">
        <div class="panel-heading">
            <h3 class="panel-title">{{ "user.signup"|trans() }}</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    {% if errors is not empty %}
                        {% include 'SPJGameBundle:Form:errors.html.twig' %}
                    {% endif %}
                    {{ form(form) }}
                </div>
                <div class="col-md-6">
                    <a href="{{ facebookLoginUrl }}" class="btn btn-default btn-lg">
                        <img src="{{ asset('/bundles/spjgame/img/facebook_icon.png') }}" alt="facebook_logo"/>
                        {{ "user.facebook_login"|trans() }}
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
