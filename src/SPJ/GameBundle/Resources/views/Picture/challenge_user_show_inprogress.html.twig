{% if app.user %}
    {% if picture %}
        <a href="{{ asset(picture.path) }}" target="_blank"><img src="{{ asset(picture.miniaturePath) }}" alt="{{ picture.title }}"/></a>
    {% else %}
        <button type="button" id="picture_upload_button" class="btn btn-primary" data-href="{{ path('picture_create', { challengeId : challenge.id }) }}">{{ "challenge.picture.upload"|trans() }}</button>
    {% endif %}
{% else %}
    <div class="alert alert-warning">{{ "challenge.picture.login_advice"|trans() }}</div>
{% endif %}
