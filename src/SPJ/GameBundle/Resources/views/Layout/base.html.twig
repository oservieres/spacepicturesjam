<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>Space Pictures Jam</title>
        <meta name="description" content="">
        <meta name="author" content="SitePoint">

        {% include 'SPJGameBundle:Layout:stylesheets.html.twig' %}
    </head>

    <body>
        <div class="github-fork-ribbon-wrapper right">
            <div class="github-fork-ribbon">
                <a href="https://github.com/simonwhitaker/github-fork-ribbon-css">Fork me on GitHub</a>
            </div>
        </div>
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('challenge_list') }}">{{ "site.name"|trans() }}</a>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('challenge_list') }}">{{ "menu.home"|trans() }}</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user == "" %}
                        <li><a href="{{ path('login') }}">{{ "menu.login"|trans()}}</a></li>
                        <li><a href="{{ path('signup') }}">{{ "menu.signup"|trans() }}</a></li>
                    {% else %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.user.username }}<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('logout') }}">{{ "menu.logout"|trans() }}</a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div id="page_content">
            {% block page_content %}{% endblock %}
        </div>

        {% include 'SPJGameBundle:Layout:javascripts.html.twig' %}
    </body>
</html>
