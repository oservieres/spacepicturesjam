<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>Space Pictures Jam</title>
        <meta name="description" content="">
        <meta name="author" content="SitePoint">

        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
        {% stylesheets
            '@SPJGameBundle/Resources/public/css/challenge.css'
            '@SPJGameBundle/Resources/public/css/fancybox.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}"></link>
        {% endstylesheets %}
    </head>

    <body>
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('challenge_list') }}">Space Picture Jam</a>
            </div>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('challenge_list') }}">Accueil</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user == "" %}
                        <li><a href="{{ path('login') }}">Se connecter</a></li>
                        <li><a href="{{ path('signup') }}">S'inscrire</a></li>
                    {% else %}
                        <li><a href="{{ path('logout') }}">Se d√©connecter</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div id="page_content">
            {% block page_content %}{% endblock %}
        </div>

        <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.pack.js"></script>
        {% javascripts
            '@SPJGameBundle/Resources/public/js/main.js'
            '@SPJGameBundle/Resources/public/js/user.js'
            '@SPJGameBundle/Resources/public/js/challenge.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
